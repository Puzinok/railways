<h2>Purchased tickets</h2>
<table border="1">
  <thead>
    <tr>
      <td>Train #</td>
      <td>Departure</td>
      <td>Arrival</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
  <% @tickets.each do |ticket| %>
    <tr>
      <td><%= ticket.train.number %></td>
      <td><%= ticket.start_station.name %></td>
      <td><%= ticket.end_station.name %></td>
      <td><%= link_to "Show", ticket_path(ticket) %> |
          <%= link_to "Delete", ticket_path(ticket), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>