<%= form_for(train) do |f| %>
 <%= render 'common/errors', resource: train  %>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>
  <div class="field">
    <%= f.label :route %>
    <%= f.collection_select :route_id, Route.all, :id, :name, { include_blank: true } %>
  </div>

   <div class="field">
    <%= f.label :numbering %>
    <%= f.check_box :numbering %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
