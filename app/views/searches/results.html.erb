<h2>Found Trains:</h2>

  <table border="1">
    <thead>
      <tr>
        <td>Train</td>
        <td>Departure from <%= @start_station.name %></td>
        <td>Arrival to <%= @end_station.name %></td>
        <td>Buy</td>
      </tr>
    </thead>
    <tbody>
<% @trains.each do |train| %>
      <tr>
        <td><%= train.number %></td>
        <td><%= @start_station.time_in(train.route, :departure_time) %></td>
        <td><%= @end_station.time_in(train.route, :arrival_time) %></td>
        <td></td>
      </tr>
<% end %>
    </tbody>
  </table>
